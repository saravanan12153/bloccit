<!-- Comment Form -->
<%= form_for [topic, post, comment], remote: true do |f| %>
  
  <% if comment.errors.any? %>
    <div class="alert alert-danger">
      <h4>There are <%= pluralize(comment.errors.count, "error") %>.</h4>
      <ul>
        <% comment.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %> 

  <%= form_group_tag(comment.errors[:body]) do %>
    <%= f.label :body %>
    <%= f.text_area :body, rows: 2, class: 'form-control', placeholder: "Enter your comment here..." %>
  <% end %>
  <br>

  <div class="form-group">
    <%= f.submit "Add Comment", class: 'btn btn-info' %>
  </div>
<% end %>
<!-- End of Comment Form -->